<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:gravity="bottom"
    android:backgroundTint="#7dff6f00"
    android:baselineAligned="false"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:contentDescription="@string/txtIcone"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitStart"
        android:layout_marginTop="15sp"
        android:layout_marginBottom="-15sp"
        android:layout_marginLeft="-5sp" />

    <TextView android:layout_width="match_parent" android:layout_height="35dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing" android:text="@string/txtSlogan"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:id="@+id/txtSlogan"
        android:textSize="16sp"
        android:textIsSelectable="false"
        android:textColor="#ffffff"
        android:layout_weight="0.15" />

    <TextView android:layout_width="wrap_content" android:layout_height="30dp"
        android:text="@string/txtSloganHelper" android:id="@+id/textView"
        android:textColor="#c8ffffff"
        android:textSize="15sp"
        android:layout_weight="0.50" />

</LinearLayout>
